[sub_resource type="GDScript" id="GDScript_lbioe"]
script/source = "extends CanvasLayer

@onready var clickSound = $\"Sound Manager/ClickSound\"
@onready var hoverSound = $\"Sound Manager/HoverSound\"

var isPaused = false

func _ready() -> void:
	visible = false

func _pause():
	isPaused = true
	DisplayServer.mouse_set_mode(DisplayServer.MOUSE_MODE_VISIBLE)
	visible = true
	Engine.time_scale = 0
	
func _unpause():
	isPaused = false
	DisplayServer.mouse_set_mode(DisplayServer.MOUSE_MODE_CAPTURED)
	visible = false
	Engine.time_scale = 1


func _process(delta: float) -> void:
	if Input.is_action_just_pressed(\"pause\") and not isPaused:
		_pause()
	elif Input.is_action_just_pressed(\"pause\") and isPaused:
		_unpause()
		
		
		
func _on_resume_button_pressed() -> void:
	clickSound.play()
	_unpause()
func _on_options_button_pressed() -> void:
	clickSound.play()
func _on_quit_button_pressed() -> void:
	clickSound.play()
	get_tree().quit()


#play hover sound
func _on_resume_button_mouse_entered() -> void:
	hoverSound.play()
func _on_options_button_mouse_entered() -> void:
	hoverSound.play()
func _on_quit_button_mouse_entered() -> void:
	hoverSound.play()
"

